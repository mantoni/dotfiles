[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore_global
[push]
	default = upstream
[alias]
	a = add
	ci = commit
	s = status
	st = status
	br = branch
	co = checkout
  d = diff --color-moved
  l = log --graph --decorate --date=relative
  t = tag
	re = rebase
[color]
	ui = true
[credential]
	helper = cache --timeout 86400
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[interactive]
	diffFilter = diff-highlight
